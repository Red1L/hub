{
  "files": [
    "src/**/*.ts",
    "typings/browser.d.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules"
  ]
}